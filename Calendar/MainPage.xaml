<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="Calendar.MainPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">

    <ScrollView>
        <VerticalStackLayout
            Padding="30,0"
            Spacing="25"
            VerticalOptions="Center">

            <Label
                FontSize="32"
                HorizontalOptions="Center"
                Text="Permission Testing" />

            <Label
                FontSize="18"
                HorizontalOptions="Center"
                Text="Test permissions in .NET MAUI" />

            <Button
                x:Name="PermissionBtn"
                Clicked="OnPermissionClicked"
                HorizontalOptions="Center"
                Text="Test Permissions" />

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
